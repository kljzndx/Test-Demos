<Page
    x:Class="BackgroundTaskDemo.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BackgroundTaskDemo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <StackPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="0,4"/>
            </Style>
        </StackPanel.Resources>
        <Button x:Name="Start_Button" Content="Start task" Click="Start_Button_Click"/>
        
        <Button x:Name="ViewLog_Button" Content="View log" Click="ViewLog_Button_Click"/>
        <Button x:Name="ViewOldLog_Button" Content="View old log" Click="ViewOldLog_Button_Click"/>
    </StackPanel>
</Page>
