<Page
    x:Class="BlurBackgroundTest.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BlurBackgroundTest"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="MainPage_OnLoaded">

    <Grid>
        <Image Source="Assets/Background.jpg" Stretch="UniformToFill"/>
        <Rectangle x:Name="Blur_Rectangle"/>

        <Border Padding="10" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border.Background>
                <SolidColorBrush Color="White" Opacity="0.3"/>
            </Border.Background>
            <Slider x:Name="BlurDegree_Slider" Width="200" Header="背景模糊度" Maximum="30" ValueChanged="BlurDegree_Slider_OnValueChanged"/>
        </Border>
    </Grid>
</Page>
